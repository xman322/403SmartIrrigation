<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.xm.android.smartWeather">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="it.xm.android.smartWeather.OzonoAppl"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android_Ozono">
        <activity
            android:name="it.xm.android.smartWeather.manualMode"
            android:exported="false" />
        <activity
            android:name="it.xm.android.smartWeather.simpleMode"
            android:exported="false" />
        <activity
            android:name="it.xm.android.smartWeather.DetailActivity"
            android:exported="false" />
        <activity
            android:name="it.xm.android.smartWeather.zoneSetUp"
            android:exported="false" />
        <!--
        <activity
            android:name=".mainMenu"
            android:exported="false" />-->
        <activity
            android:name="it.xm.android.smartWeather.zones"
            android:exported="false" />
        <activity android:name="it.xm.android.smartWeather.mainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.xm.android.smartWeather.ui.main.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>